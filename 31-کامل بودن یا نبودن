import java.util.Scanner;
public class Main {
public static void main(String[] args) {
      Scanner intput = new Scanner(System.in);
      int n, sum = 0;

      n = intput.nextInt();

      for (int i = 1; i < n; i++) {
          if (n % i == 0) {
              sum = sum + i;
          }
      }
      if (n == sum)
          System.out. print ("YES");
      else
          System.out. print("NO");
  }
}
